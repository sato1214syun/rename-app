{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rename-app",
  "version": "0.1.0",
  "identifier": "com.rename-app.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "rename-app",
        "width": 800,
        "height": 600,
        "skipTaskbar": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    }
  },
  "plugins": {}
}
